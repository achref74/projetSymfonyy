{% extends 'backBase.html.twig' %}

{% block title %}Forum index{% endblock %}

{% block body %}
    <h1>Forum index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idforum</th>
                <th>Titre</th>
                <th>Datecreation</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for forum in forums %}
            <tr>
                <td>{{ forum.idforum }}</td>
                <td>{{ forum.titre }}</td>
                <td>{{ forum.datecreation ? forum.datecreation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ forum.description }}</td>
                <td>
                    <form method="post" action="{{ path('app_forum_delete', {'idforum': forum.idforum,'idformation': idformation}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ forum.idforum) }}">
    <button class="btn">Delete</button>
</form>
                    <a href="{{ path('app_forum_edit', {'idforum': forum.idforum , 'idformation': idformation}) }}">edit</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_forum_new', {'idformation': idformation}) }}">Create new</a>
{% endblock %}
