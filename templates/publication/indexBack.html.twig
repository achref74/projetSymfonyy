{% extends 'backbase.html.twig' %}

{% block title %}Publication index{% endblock %}

{% block body %}
<h1 class="text-primary">Publications</h1>
        <button type="button" class="btn btn-outline-secondary" id="toggleButton">
    <i class="mdi mdi-format-vertical-align-top"></i>
    <a href="{{ path('Back_publication_index_Trier', {'idUser': idUser, 'idForum': idForum, 'idformation': idformation}) }}">Trier</a>
</button>
<br>
<br>


<div class="container">
    <div class="row">
        {% for publication in publications %}
        <div class="col-lg-4 col-md-6">
            <div class="card mb-4">
                {% if publication.image %}
                <img  class="card-img-top"  src="{{ asset('uploads/' ~ publication.image) }}" alt="Publication Image">
                {% else %}
                <div class="no-image-placeholder">No Image Available</div>
                {% endif %}
                <div class="card-body">
                    <h5 class="card-title">{{ publication.contenup }}</h5>
                    <p class="card-text">Date de Modification: {{ publication.datecreation ? publication.datecreation|date('Y-m-d H:i:s') : 'N/A' }}</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            
                            <form method="post" action="{{ path('Back_publication_delete', {'idp':publication.idp,'idForum': idForum,'idUser': idUser,'idformation': idformation}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ publication.idp) }}">
                                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
        <div class="col-lg-12">
            <p>No publications found.</p>
        </div>
        {% endfor %}
    </div>
    <a href="{{ path('app_forum_index', {'idformation': idformation,'idUser': idUser}) }}">back</a>
</div>





{% endblock %}
