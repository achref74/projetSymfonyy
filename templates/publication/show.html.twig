{% extends 'base.html.twig' %}

{% block title %}Publication{% endblock %}

{% block body %}
    <h1>Publication</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Idp</th>
                <td>{{ publication.idp }}</td>
            </tr>
            <tr>
                <th>Datecreation</th>
                <td>{{ publication.datecreation ? publication.datecreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Contenup</th>
                <td>{{ publication.contenup }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ publication.image }}</td>
            </tr>
            <tr>
                <th>Nblike</th>
                <td>{{ publication.nblike }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_publication_index', {'idUser': idUser, 'idForum': idForum}) }}">back to list</a>
    <a href="{{ path('app_publication_edit', {'idp': publication.idp, 'idUser': idUser, 'idForum': idForum}) }}">edit</a>

    {{ include('publication/_delete_form.html.twig') }}
{% endblock %}
