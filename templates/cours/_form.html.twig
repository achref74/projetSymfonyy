<section class="contact-us" id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 align-self-center">
                <div class="row">
                    <div class="col-lg-12">
                        {{ form_start(form, {'attr': {'id': 'contact', 'class': 'contact-form', 'method': 'post'}}) }}
                            <div class="row">
                                <div class="col-lg-12">
                                    <h2>Nouveau cours</h2>
                                </div>
                                <div class="col-lg-4">
                                    <fieldset>
                                        {{ form_widget(form.nom, {'attr': {'placeholder': 'YOURNAME...*', 'required': 'required'}}) }}
                                    </fieldset>
                                </div>
                                <div class="col-lg-4">
                                    <fieldset>
                                        {{ form_widget(form.description, {'attr': {'placeholder': 'DESCRIPTION...', 'required': 'required'}}) }}
                                    </fieldset>
                                </div>
                                <div class="col-lg-4">
                                    <fieldset>
                                        {{ form_widget(form.date, {'attr': {'placeholder': 'DATE...', 'required': 'required'}}) }}
                                    </fieldset>
                                </div>
                                <div class="col-lg-4">
                                    <fieldset>
                                        {{ form_widget(form.duree, {'attr': {'placeholder': 'DUREE...', 'required': 'required'}}) }}
                                    </fieldset>
                                </div>
                                <div class="col-lg-4">
                                    <fieldset>
                                        {{ form_widget(form.prerequis, {'attr': {'placeholder': 'PREREQUIS...', 'required': 'required'}}) }}
                                    </fieldset>
                                </div>
                                <div class="col-lg-4">
                                    <fieldset>
                                        {{ form_widget(form.ressource, {'attr': {'placeholder': 'RESSOURCE...', 'required': 'required'}}) }}
                                    </fieldset>
                                </div>
    {{ form_label(form.video) }}
    {{ form_widget(form.video) }}
    {{ form_errors(form.video) }}
    
                                <div class="col-lg-12">
                                    <fieldset>
                                        {{ form_widget(form._token) }}
                                        <button type="submit" id="form-submit" class="button">Ajouter</button>
                                    </fieldset>
                                </div>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
