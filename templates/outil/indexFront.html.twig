{% extends 'baseFront.html.twig' %}

{% block title %}
    Outil index
{% endblock %}

{% block content %}
    <section class="upcoming-meetings" id="outil-index">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-heading">
                        <h2>Outils Overview</h2>
                        <p>Explore a variety of tools and their details below.</p>
                    </div>
                </div>
                <!-- Cards for each Outil -->
                {% for outil in outils %}
                    <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
                        <div class="card mb-4">
                            <img class="card-img-top" src="{{ asset('uploads/images/' ~ outil.image) }}" alt="{{ outil.nom }}">
                            <div class="card-body">
                                <h5 class="card-title">{{ outil.nom }}</h5>
                                <p class="card-text">{{ outil.description }}</p>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">Price: ${{ outil.prix }}</li>
                                    <li class="list-group-item">Resources: {{ outil.ressources }}</li>
                                    <li class="list-group-item">Stock: {{ outil.stock }}</li>
                                    <li class="list-group-item">Status:
                                        <span class="badge {{ outil.etat|replace({'Pending':'badge-danger', 'In progress':'badge-warning', 'Fixed':'badge-info', 'Completed':'badge-success'}) }}">
                                            {{ outil.etat }}
                                        </span>
                                    </li>
                                </ul>
                                <div class="main-button-red">
                                    <a href="{{ path('app_achat_new', {'outilId': outil.id, 'total': outil.prix}) }}">Acheter</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-lg-12">
                        <p>No tools found.</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
