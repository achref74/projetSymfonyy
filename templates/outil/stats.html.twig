{% extends 'baseBack.html.twig' %}

{% block title %}
    Outil Statistics
{% endblock %}

{% block content %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <div class="main-panel">
        <div class="row">
            <h1>Statistique</h1>
            <!-- Styled Table Following the "Basic Table" Example -->
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="chart-container" style="position: relative; height:40vh; width:80vw">
                        <canvas id="categoryPieChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        var ctx = document.getElementById('categoryPieChart').getContext('2d');
        var categoryPieChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: {{ labels|json_encode|raw }},
                datasets: [{
                    label: 'Outils by Category',
                    data: {{ data|json_encode|raw }},
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    }
                }
            }
        });
    </script>

{% endblock %}
