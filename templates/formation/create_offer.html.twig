{% extends 'base1.html.twig' %}

{% block body1 %}
<section class="heading-page header-text" id="top">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Welcome </h1>
                <h2>Add Offer</h2>
            </div>
        </div>
    </div>
</section>
{% endblock %} 

{% block body2 %}
<br>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title" style="color: white">Create Offer for {{ formation.nom }}</h1>
                    {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_row(form.prixOffre, {'label_attr': {'style': 'color: black '}, 'attr': {'class': 'form-control'}}) }}
                        {% if form_errors(form.prixOffre) %}
                            <div class="alert alert-danger mt-2">
                                {{ form_errors(form.prixOffre) }}
                            </div>
                        {% endif %}
                    </div>
                    
                    <div class="mb-3">
                        {{ form_row(form.description, {'label_attr': {'style': 'color: black'}, 'attr': {'class': 'form-control'}}) }}
                        {% if form_errors(form.description) %}
                            <div class="alert alert-danger mt-2">
                                {{ form_errors(form.description) }}
                            </div>
                        {% endif %}
                    </div>
                    
                    <div class="mb-3">
                        {{ form_row(form.dateD, {'label_attr': {'style': 'color: black'}, 'attr': {'class': 'form-control'}}) }}
                        {% if form_errors(form.dateD) %}
                            <div class="alert alert-danger mt-2">
                                {{ form_errors(form.dateD) }}
                            </div>
                        {% endif %}
                    </div>
                    
                    <div class="mb-3">
                        {{ form_row(form.dateF, {'label_attr': {'style': 'color: black'}, 'attr': {'class': 'form-control'}}) }}
                        {% if form_errors(form.dateF) %}
                            <div class="alert alert-danger mt-2">
                                {{ form_errors(form.dateF) }}
                            </div>
                        {% endif %}
                    </div>
                    
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Create Offer</button>
                        <a href="{{ path('formation_details', {'id': formation.idFormation}) }}" class="btn btn-secondary">Back to Formation Details</a>
                    </div>
                    
                    {{ form_end(form) }}
                    
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

