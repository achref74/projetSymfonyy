{% block body2 %}


<section class="our-dashbord dashbord bgc-f9">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="breadcrumb_content">
                    <h2 class="breadcrumb_title text-center">Edit Formation</h2>
                    <p class="text-center">Modify formation details below:</p>
                </div>

                <div class="new_property_form">
                    {{ form_start(form) }}

                    <h4 class="title mb30">Formation</h4>
                    <div class="row">
                        <div class="col-md-12 mb20">
                            {{ form_row(form.nom) }}
                        </div>
                        <div class="col-md-12 mb20">
                            {{ form_row(form.description) }}
                        </div>
                        <div class="col-md-12 mb20">
                            {{ form_row(form.prix) }}
                        </div>
                        <div class="col-md-12 mb20">
                            {{ form_row(form.dated) }}
                        </div>
                        <div class="col-md-12 mb20">
                            {{ form_row(form.datef) }}
                        </div>
                        <div class="col-md-12 mb20">
                            {{ form_row(form.nbrcours) }}
                        </div>
                        <div class="form-group">
                            
                        {{ form_widget(form.imageUrl, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.imageUrl) }}
                        </div>
                        
                     
                    </div>
                    

                    <div class="col-md-12 mb20">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                    

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}
