

<form action="{{ path('app_formation_add') }}" method="post" enctype="multipart/form-data">
    {{ form_start(form) }}

    <div class="form-group">
        {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_row(form.description, {'attr': {'class': 'form-control', 'rows': 3}}) }}
    </div>

    <div class="form-group">
        {{ form_row(form.prix, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_row(form.dated, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_row(form.datef, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_row(form.nbrcours, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_row(form.imageUrl) }}
    </div>

    <!-- Add any other fields you need for the formation form -->

    <button type="submit" class="btn btn-primary">Submit</button>

    {{ form_end(form) }}
</form>
