{% block body2 %}
<div class="row">
    <div class="col-lg-12">
        <div class="table-container">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Offer Description</th>
                            <th>Price</th>
                            <th>Date DÃ©but</th>
                            <th>Date Fin</th>
                            <th>Formation Name</th>
                            <th>Actions</th> <!-- Add Actions column -->
                        </tr>
                    </thead>
                    <tbody>
                        {% for formationWithOffer in formationsWithOffers %}
                            {% set formation = formationWithOffer.formation %}
                            {% set offers = formationWithOffer.offers %}
                            {% for offer in offers %}
                                <tr>
                                    <td>{{ offer.description }}</td>
                                    <td>{{ offer.prixOffre }}</td>
                                    <td>{{ offer.dateD|date('Y-m-d') }}</td>
                                    <td>{{ offer.dateF|date() }}</td>
                                    <td>{{ formation.nom }}</td>
                                    <td>
                                        <!-- Update button -->
                                        <a href="{{ path('update_offer', { id: offer.idOffre }) }}" class="btn btn-primary btn-sm">Update</a>
                                        <!-- Delete button -->
                                        <form action="{{ path('delete_offer', { id: offer.idOffre }) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this offer?')">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offer.idOffre) }}">
                                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .table-container {
        background-color: #ffffff; /* White background color */
        padding: 20px; /* Add some padding for spacing */
        border-radius: 10px; /* Add border radius for rounded corners */
    }
</style>
{% endblock %} 

