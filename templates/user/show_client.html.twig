{% set baseTemplate = app.user.getRole() == 0 or app.user.getRole() == 1 ? 'frontBase.html.twig' : 'backBase.html.twig' %}
{% extends baseTemplate %}

{% block title %}Profile{% endblock %}

{% block body %}


            <div class="row">
              <div class="col-md-4 grid-margin">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Profil Image  </h4>
                    {% if user.getActivated() %}

    <i class="mdi mdi-check-circle-outline text-success"> Activated</i> <!-- Green tick -->
{% else %}
    <i class="mdi mdi-close-circle-outline text-danger"> Blocked</i> <!-- Red cross -->
{% endif %}
                        <div class="thumb-lg member-thumb mx-auto"><img src="{{ asset(user.imageProfil) }}" class="rounded img-thumbnail" alt="profile-image"></div>

                  </div>
                </div>
              </div>
              <div class="col-md-8 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <div class="d-flex flex-row justify-content-between">
                      <h4 class="card-title mb-1">Profil Info</h4>
                    </div>
                    <div class="row">
                      <div class="col-12">
                        <div class="preview-list">
                          <div class="preview-item border-bottom">
                            <div class="preview-thumbnail">
                              <div class="preview-icon bg-primary">
                                <i class="mdi mdi-email"></i>
                              </div>
                            </div>
                            <div class="preview-item-content d-sm-flex flex-grow">
                              <div class="flex-grow">
                                <h6 class="preview-subject">Email</h6>
                                <p class="text-muted mb-0">{{ user.getEmail() }}</p>
                              </div>
                                   <div class="me-auto text-sm-right pt-2 pt-sm-0">
                                <p class="text-muted">
                                {% if user.role == 0 %}
													Client
												{% elseif user.role == 1 %}
													Formateur
												{% else %}
													Admin
												{% endif %}
                                </p>
                              </div>
                            </div>
                          </div>
                          <div class="preview-item border-bottom">
                            <div class="preview-thumbnail">
                              <div class="preview-icon bg-success">
                                <i class="mdi mdi-account"></i>
                              </div>
                            </div>
                            <div class="preview-item-content d-sm-flex flex-grow">
                              <div class="flex-grow">
                                <h6 class="preview-subject">Nom Prenom</h6>
                                <p class="text-muted mb-0">{{ user.getNom() }} {{ user.getPrenom() }}</p>
                              </div>

                            </div>
                          </div>
                          <div class="preview-item border-bottom">
                            <div class="preview-thumbnail">
                              <div class="preview-icon bg-info">
                                <i class="mdi mdi-cake"></i>
                              </div>
                            </div>
                            <div class="preview-item-content d-sm-flex flex-grow">
                              <div class="flex-grow">
                                <h6 class="preview-subject">Date de Naissance</h6>
                                <p class="text-muted mb-0">{{ user.getDateNaissance()|date('Y-m-d') }}</p>
                              </div>
                            </div>
                          </div>
                          <div class="preview-item border-bottom">
                            <div class="preview-thumbnail">
                              <div class="preview-icon bg-danger">
                                <i class="mdi mdi-cellphone-basic"></i>
                              </div>
                            </div>
                            <div class="preview-item-content d-sm-flex flex-grow">
                              <div class="flex-grow">
                                <h6 class="preview-subject">Numéro de téléphone</h6>
                                <p class="text-muted mb-0">{{user.numtel}}</p>
                              </div>
                            </div>
                          </div>
                          <div class="preview-item border-bottom">
                            <div class="preview-thumbnail">
                              <div class="preview-icon bg-warning">
                                <i class="mdi mdi-home"></i>
                              </div>
                            </div>
                            <div class="preview-item-content d-sm-flex flex-grow">
                              <div class="flex-grow">
                                <h6 class="preview-subject">Adresse</h6>
                                <p class="text-muted mb-0">{{user.adresse}}</p>
                              </div>
                            </div>
                          </div>
                            <div class="preview-item border-bottom">
                            <div class="preview-thumbnail">
                              <div class="preview-icon bg-warning">
                                <i class="mdi mdi-school"></i>
                              </div>
                            </div>
                            <div class="preview-item-content d-sm-flex flex-grow">
                              <div class="flex-grow">
                                <h6 class="preview-subject">Niveau</h6>
                                <p class="text-muted mb-0">{{user.getNiveauScolaire()}}</p>
                              </div>
                            </div>
                          </div>
                                {% if user.role == 1 %}
                            <div class="preview-item border-bottom">
                            <div class="preview-thumbnail">
                              <div class="preview-icon bg-primary">
                                <i class="mdi mdi-checkbox-marked-circle"></i>
                              </div>
                            </div>
                            <div class="preview-item-content d-sm-flex flex-grow">
                              <div class="flex-grow">
                                <h6 class="preview-subject">Disponibilité</h6>
                                <p class="text-muted mb-0">
                               {% if user.disponiblite == 0 %}
													Non Disponible
												{% elseif user.role == 1 %}
													Disponible
												{% endif %}
                                </p>
                              </div>
                            </div>
                          </div>


								{% endif %}
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
{% endblock %}


