{% extends 'backBase.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}


	<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container profile-page">
    <div class="col-xl-12 col-lg-12 col-md-12">
        {% for user in users %}
            {% if loop.index0 % 3 == 0 %}
                <div class="row">
            {% endif %}
            
            <div class="col-lg-4 col-md-4 col-12">
                <div class="card profile-header">
                    <div class="body">
                        <div class="profile-image float-md-right">
                            <img src="{{ asset(user.imageProfil) }}" alt="Profile Image" width="100" height="100">
                        </div>
                        <h4 class="m-t-0 m-b-0"><strong>{{ user.nom }} {{ user.prenom }}</strong></h4>
                        <span class="job_post">{{ user.genre }}</span>
                        <p>{{ user.adresse }}</p>
                        <div>
							<a lass="btn btn-primary btn-round" href="{{ path('app_user_show', {'idUser': user.idUser}) }}" class="btn btn-primary">Show</a>

                        </div>
                    </div>
                </div>
            </div>
            
            {% if loop.index0 % 3 == 2 or loop.last %}
                </div>
            {% endif %}
        {% endfor %}
    </div>
</div>



