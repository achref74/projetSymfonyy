{% extends 'base.html.twig' %}

{% block title %}Modifier le profil du Formateur{% endblock %}

{% block body %}
    <h1>Modifier le profil du Formateur</h1>
    <form method="post" action="{{ path('app_user_edit_formateur', {'idUser': user.getIdUser()}) }}">
        <label for="nom">Nom:</label>
        <input type="text" id="nom" name="nom" value="{{ user.getNom() }}" required>
        
        <label for="prenom">Prénom:</label>
        <input type="text" id="prenom" name="prenom" value="{{ user.getPrenom() }}" required>
        
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="{{ user.getEmail() }}" required>
        
        <label for="dateNaissance">Date de Naissance:</label>
        <input type="date" id="dateNaissance" name="dateNaissance" value="{{ user.getDateNaissance()|date('Y-m-d') }}" required>

        <label for="adresse">Adresse:</label>
        <input type="text" id="adresse" name="adresse" value="{{ user.getAdresse() }}" required>

        <label for="numtel">Numéro de téléphone:</label>
        <input type="tel" id="numtel" name="numtel" value="{{ user.getNumtel() }}" required>

        <label for="specialite">Spécialité:</label>
        <input type="text" id="specialite" name="specialite" value="{{ user.getSpecialite() }}" required>

        <label for="niveauAcademique">Niveau Académique:</label>
        <input type="text" id="niveauAcademique" name="niveauAcademique" value="{{ user.getNiveauAcademique() }}" required>

        <label for="disponibilite">Disponibilité:</label>
        <input type="text" id="disponibilite" name="disponiblite" value="{{ user.getDisponiblite() }}" required>

        <label for="cv">CV:</label>
        <input type="text" id="cv" name="cv" value="{{ user.getCv() }}" required>
        
        <button type="submit">Enregistrer les modifications</button>
    </form>
{% endblock %}
