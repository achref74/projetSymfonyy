/* Add this CSS to your stylesheet */
.role-radio-buttons label {
    display: inline-block;
    margin-right: 20px; /* Adjust spacing between radio buttons */
}

.role-radio-buttons input[type="radio"] {
    display: none; /* Hide the actual radio buttons */
}

/* Custom styling for radio button appearance */
.role-radio-buttons input[type="radio"] + label::before {
    content: '';
    display: inline-block;
    width: 20px;
    height: 20px;
    border: 1px solid #ccc; /* Change border color as needed */
    border-radius: 50%;
    margin-right: 5px;
    vertical-align: middle;
}

/* Custom styling for checked radio buttons */
.role-radio-buttons input[type="radio"]:checked + label::before {
    background-color: #007bff; /* Change color as needed */
}

</style>
