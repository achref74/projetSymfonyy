{# templates/user/client_additional_info.html.twig #}

{# {% extends 'base.html.twig' %}

{% block title %}Informations supplémentaires du client{% endblock %}

{% block body %}
    <h1>Informations supplémentaires du client</h1>
    {{ form_start(form) }}
        {{ form_row(form.imageProfil) }}
        {{ form_row(form.genre) }}
        {{ form_row(form.niveauScolaire) }}
        {{ form_row(form.mdp) }}
        {{ form_row(form.suivant) }}
    {{ form_end(form) }}
{% endblock %} #}
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Corona Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="{{ asset('shared/assets/vendors/mdi/css/materialdesignicons.min.css') }}">
    <link rel="stylesheet" href="{{ asset('shared/assets/vendors/css/vendor.bundle.base.css') }}">
    <!-- endinject -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="{{ asset('shared/assets/css/style.css') }}">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="{{ asset('shared/assets/images/favicon.png') }}" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="row w-100 m-0">
                <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
                    <div class="card col-lg-4 mx-auto">
                        <div class="card-body px-5 py-5">
                            <h3 class="card-title text-left mb-3">Informations supplémentaires du client</h3>
                            {{ form_start(form) }}
                                <div class="form-group">
                                    {{ form_label(form.imageProfil) }}
                                    {{ form_widget(form.imageProfil, {'attr': {'class': 'form-control p_input'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.genre) }}
                                    {{ form_widget(form.genre, {'attr': {'class': 'form-control p_input'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.niveauScolaire) }}
                                    {{ form_widget(form.niveauScolaire, {'attr': {'class': 'form-control p_input'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.mdp) }}
                                    {{ form_widget(form.mdp, {'attr': {'class': 'form-control p_input'}}) }}
                                </div>

                                <div class="pb-5"></div>
                                <div class="text-center">
                                <div class="form-group">
                                    {{ form_label(form.suivant) }}
                                    {{ form_widget(form.suivant, {'attr': {'class': 'btn btn-primary btn-block enter-btn'}}) }}
                                </div>                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
                <!-- content-wrapper ends -->
            </div>
            <!-- row ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="{{ asset('shared/assets/vendors/js/vendor.bundle.base.js') }}"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="{{ asset('shared/assets/js/off-canvas.js') }}"></script>
    <script src="{{ asset('shared/assets/js/hoverable-collapse.js') }}"></script>
    <script src="{{ asset('shared/assets/js/misc.js') }}"></script>
    <script src="{{ asset('shared/assets/js/settings.js') }}"></script>
    <script src="{{ asset('shared/assets/js/todolist.js') }}"></script>
    <!-- endinject -->
</body>
</html>
