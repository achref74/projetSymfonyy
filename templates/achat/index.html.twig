{% extends 'baseBack.html.twig' %}

{% block title %}Achat Index{% endblock %}

{% block content %}



<style>
.pagination {
    background-color: #007bff; /* Couleur de fond */
    color: #fff; /* Couleur du texte */
    border-color: #007bff; /* Couleur de la bordure */
    display: inline-block; /* Affichage en ligne */
    padding: 6px 12px; /* Espacement intérieur */
    margin: 0; /* Marge extérieure */
    border-radius: 4px; /* Rayon de la bordure */
}

.pagination a {
    color: #fff; /* Couleur du texte des liens */
    text-decoration: none; /* Supprimer le soulignement des liens */
}

.pagination a:hover {
    background-color: #0056b3; /* Couleur de fond au survol */
}

.pagination .active {
    background-color: #0056b3; /* Couleur de fond de l'élément actif */
    border-color: #0056b3; /* Couleur de la bordure de l'élément actif */
} 
</style>
    <div class="container mt-4">
        <h1 class="mb-4">Achat Index</h1>

        <!-- Bootstrap Card for Table Display -->
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">List of Purchases</h4>
                <p class="card-description">
                    Here you can view all the purchase records and manage them.
                </p>

                <!-- Responsive Table inside a Card -->
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Total</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for achat in achats %}
                            <tr>
                                <td>{{ achat.id }}</td>
                                <td>{{ achat.total }}</td>
                                <td>{{ achat.date ? achat.date|date('Y-m-d') : '' }}</td>
                                <td>
                                    <a href="{{ path('app_achat_show', {'id': achat.id}) }}" class="btn btn-info btn-sm">Show</a>
                                    <a href="{{ path('app_achat_edit', {'id': achat.id}) }}" class="btn btn-primary btn-sm">Edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">No records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
<center><div class="pagination">
    {{ knp_pagination_render(achats) }}
</div></center>
<div id="google_translate_element"></div> <script type="text/javascript"> function googleTranslateElementInit() { new google.translate.TranslateElement({pageLanguage: 'en'},'google_translate_element'); } </script> <script type="text/javascript"src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
        <!-- Button to Create a New Purchase Record -->
        <div class="mt-4">
            <a href="{{ path('app_achat_new') }}" class="btn btn-success">Create New</a>
        </div>
    </div>
{% endblock %}
