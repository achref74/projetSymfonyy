{% extends 'base2.html.twig' %}

{% block content %}
<!-- partial -->
<div class="main-panel">
  <div class="content-wrapper">
    <div class="page-header">
      <h3 class="page-title"> Tableaux Des Formations</h3>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          
          
        </ol>
      </nav>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">formations</h4>
          
            <div class="table-responsive">
              <table class="table table-striped table-fixed">
                <thead>
                  <tr>
                    <th scope="col">Nom</th>
                    <th scope="col" style="max-width: 200px;">Description</th>
                    <th scope="col">Prix</th>
                    <th scope="col">Date DÃ©but</th>
                    <th scope="col">Date Fin</th>
                    <th scope="col">Nombre Cours</th>
                  </tr>
                </thead>
                <tbody>
                  {% for formation in formations %}
                  <tr>
                    <td>{{ formation.getNom() }}</td>
                    <td style="max-width: 200px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;"><p>{{ formation.getDescription() }}</p></td>
                    <td>{{ formation.getPrix() }}</td>
                    <td>{{ formation.getDated() ? formation.getDated()|date('Y-m-d') : '' }}</td>
                    <td>{{ formation.getDatef() ? formation.getDatef()|date('Y-m-d') : '' }}</td>
                    <td>{{ formation.getNbrcours() }}</td>
                  </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Inline CSS to adjust the description column width and handle overflow -->
<style>
  th.description-column {
    width: 200px; /* Set the maximum width of the column */
    overflow: hidden; /* Hide overflowing content */
    text-overflow: ellipsis; /* Display ellipsis (...) for truncated text */
    white-space: nowrap; /* Prevent wrapping of text */
  }
</style>
{% endblock %}
